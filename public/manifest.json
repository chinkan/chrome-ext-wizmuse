{
    "manifest_version": 3,
    "name": "WizMuse",
    "version": "0.9.0",
    "description": "WizMuse is a powerful web page summarization and note-taking tool. Quickly extract and save content from web pages.",
    "permissions": [
        "activeTab",
        "storage",
        "sidePanel",
        "tabs",
        "unlimitedStorage",
        "identity",
        "scripting"
    ],
    "oauth2": {
        "client_id": "151d872b-594c-80b5-9599-0037a4e95c8d",
        "scopes": ["https://api.notion.com/v1/oauth/authorize"]
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "host_permissions": [
        "<all_urls>",
        "https://api.notion.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
